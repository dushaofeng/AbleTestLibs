<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/et_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1000"/>

    <Button
        android:id="@+id/bt_maopao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="冒泡算法"/>

    <Button
        android:id="@+id/bt_xuanze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="选择算法"/>

    <Button
        android:id="@+id/bt_charu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="插入算法"/>

    <Button
        android:id="@+id/bt_xier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="希尔排序"/>

    <Button
        android:id="@+id/bt_kuaipai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="快速排序"/>

    <Button
        android:id="@+id/bt_dui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="堆排序"/>

    <Button
        android:id="@+id/bt_jishu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="基数排序"/>
</LinearLayout>